# Environment variables for Supabase setup
# Copy these to your .env file after creating your Supabase project

# =============================================================================
# SUPABASE DATABASE CONFIGURATION  
# =============================================================================

# Replace with your actual Supabase project details:
# Format: postgresql://postgres:[YOUR_PASSWORD]@[PROJECT_REF].supabase.co:5432/postgres
SUPABASE_DATABASE_URL=postgresql://postgres:your-db-password@your-project-ref.supabase.co:5432/postgres

# Supabase API Configuration
# Get these from Project Settings > API in your Supabase dashboard
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Alternative: Use the connection pooling URL for better performance
# SUPABASE_DATABASE_URL=postgresql://postgres:[YOUR_PASSWORD]@[PROJECT_REF].pooler.supabase.co:6543/postgres

# =============================================================================
# OTHER ENVIRONMENT VARIABLES (keep existing values)
# =============================================================================

# App Configuration
SECRET_KEY=your-secret-key-here
DEBUG=true
ENVIRONMENT=development

# OAuth Configuration (keep your existing values)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# Stripe Configuration (keep your existing values)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Email Configuration (optional - Supabase has built-in email)
EMAIL_FROM=noreply@yourdomain.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
